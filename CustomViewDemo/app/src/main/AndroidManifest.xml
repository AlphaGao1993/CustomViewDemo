        </activity>
        <activity android:name=".Activity.WheeledMenuActivity" />
        <activity android:name=".Activity.CarouselActivity" />
        <activity android:name=".Activity.PopupWindowActivity" />
        <activity android:name=".Activity.ToggleActivity" />
        <activity android:name=".Activity.RefeathActivity" />
        <activity android:name=".Activity.SlideMenuAvtiviy" />
        <activity android:name=".Activity.OvalWeatherActivity" />
        <activity android:name=".Activity.ViewPagerActivity" />
        <activity android:name=".Activity.CircleViewActivity" />
        <activity android:name=".Activity.RecyclerViewActivity"></activity>
    </application>

</manifest>