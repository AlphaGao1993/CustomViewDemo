<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <com.example.alpha.customviewdemo.UI.OvalDegree
            android:id="@+id/weather_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:layout_margin="10dp"
            android:background="@color/bg_pressed"/>

        <EditText
            android:id="@+id/currentTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Input current temperature"
            android:inputType="number" />

        <EditText
            android:id="@+id/weatherType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input weather type" />

        <EditText
            android:id="@+id/minTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input minimum temperature"
            android:inputType="number"/>

        <EditText
            android:id="@+id/maxTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input maximum temperature"
            android:inputType="number"/>


        <Button
            android:id="@+id/changeWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定" />
    </LinearLayout>
</ScrollView>